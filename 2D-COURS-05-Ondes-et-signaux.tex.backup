  \begin{center}
      \includegraphics[width=\columnwidth]{5.0-ondes-signaux/symboles-capteurs.pdf}
  \end{center}
  \caption{Symboles électriques de différents capteurs résistifs.}
  \label{fig:symboles-capteurs}
\end{figure}



